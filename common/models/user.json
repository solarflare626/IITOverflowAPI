{
  "name": "user",
  "plural": "users",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "Counts": true
  },
  "properties": {
    "email": {
      "type": "string",
      "required": true
    },
    "displayname": {
      "type": "string",
      "required": false
    },
    "createdAt": {
      "type": "date",
      "defaultFn": "now",
      "required": true
    },
    "updatedAt": {
      "type": "date",
      "defaultFn": "now",
      "required": true
    },
    "deletedAt": {
      "type": "date"
    }
  },
  "validations": [],
  "relations": {
    "following": {
      "type": "hasMany",
      "model": "user",
      "foreignKey": "followerId",
      "through": "Follow",
      "keyThrough": "followeeId"
    },
    "followers": {
      "type": "hasMany",
      "model": "user",
      "foreignKey": "followeeId",
      "through": "Follow",
      "keyThrough": "followerId"
    },
    "accessTokens": {
      "type": "hasMany",
      "model": "CustomToken",
      "foreignKey": "userId",
      "options": {
        "disableInclude": true
      }
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "addToLogin"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": ""
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__get__followers"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "__count__followers"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "*"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "*"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
