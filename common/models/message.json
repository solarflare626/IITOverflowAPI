{
  "name": "Message",
  "plural": "Messages",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "id": {
      "type": "number"
    },
    "message": {
      "type": "string",
      "required": true
    },
    "created_at": {
      "type": "date",
      "required": true,
      "defaultFn": "now"
    }
  },
  "validations": [],
  "relations": {
    "sender": {
      "type": "belongsTo",
      "model": "user"
    },
    "conversation": {
      "type": "belongsTo",
      "model": "Conversation"
    }
  },
  "acls": [],
  "methods": {}
}
